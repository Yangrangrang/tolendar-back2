generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  userId   String  @unique
  Todo     Todo[]
}

model Todo {
  id           Int      @id @default(autoincrement())
  content      String
  isDone       Boolean  @default(false)
  todoDate     DateTime
  dayAgoAlarm  String?
  veryDayAlarm String?
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
}
