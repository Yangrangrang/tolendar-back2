generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String  @unique
  name     String?
  password String
  userId   Int     @id @default(autoincrement())
  username String  @unique
  Todo     Todo[]
}

model Todo {
  todoId       Int      @id @default(autoincrement())
  content      String
  isDone       Boolean  @default(false)
  todoDate     DateTime
  dayAgoAlarm  String?
  veryDayAlarm String?
  userUserId   Int
  userId       User     @relation(fields: [userUserId], references: [userId])
}
